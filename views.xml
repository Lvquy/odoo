
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="nhan_su_form" model="ir.ui.view">
            <field name="name">nhan.su.form</field>
            <field name="model">nhan.su</field>
            <field name="arch" type="xml">
                <form string="Nhân sự">
                    <header>
                            <field name="state" widget="statusbar" statusbar_visible="0,1"/>
                            <button name="confirm" string="Confirm" type="object" attrs="{'invisible':[('state', 'in', ('1'))]}"/>
                        </header>
                    <sheet>
                        <group string="">
                            <group>
                                <field name="" attrs="{
                                'invisible':[('state', 'in', ('2','3'))],
                                'readonly':[('state', 'in', ('1'))]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="page_name" string="page string">
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="nhan_su_tree" model="ir.ui.view">
            <field name="name">nhan.su.tree</field>
            <field name="model">nhan.su</field>
            <field name="arch" type="xml">
                <tree string="Nhân sự" editable="bottom" decoration-danger="state=='0'" decoration-success="state=='1'">
                    <field name="name" optional="show"/>
                </tree>
            </field>
        </record>

        <!-- action view-->
        <record id="action_view_nhan_su" model="ir.actions.act_window">
            <field name="name">Nhân sự</field>
            <field name="res_model">nhan.su</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('create_uid', '=', uid)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new ...
                </p>
            </field>
        </record>
        <menuitem id="menu_nhan_su" name="Nhân sự" sequence="1"
              web_icon="vitinhso,static/src/img/logo.png" groups="base.group_system"/>
        <menuitem id="menu_sub_nhan_su" name="Nhân sự" parent="menu_nhan_su" action="action_view_nhan_su"
              sequence="1" groups="base.group_system"/>
    </data>
</odoo>

